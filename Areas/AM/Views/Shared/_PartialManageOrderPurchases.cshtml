@model FAPP.Areas.AM.ViewModels.ManageOrderPurchaseViewModel
<table class="table table-hover">
    <thead>
        <tr>
            <th width="5%">Sr.</th>
            <th width="10%">Code</th>
            <th>Purchase Date</th>
            <th>Supplier</th>
            <th>Created On</th>
            <th>Created By</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PurchaseOrders != null)
        {
            var count = 1;
            foreach (var item in Model.PurchaseOrders)
            {
                <tr>
                    <td><span class="label label-default current-theme">@(count++)</span></td>
                    <td>@Html.DisplayFor(s=> item.PurchaseOrderCode)</td>
                    <td>@String.Format("{0:D}", item.PurchaseOrderDate)</td>
                    <td>@Html.DisplayFor(s => item.Supplier.Name)</td>
                    <td>@item.CreatedOn.ToShortDateString()</td>
                    <td>@Html.DisplayFor(s => item.CreatedByUser.Username)</td>
                    <td>@Html.DisplayFor(s => item.Description)</td>
                    <td><a href="@Url.Action("AddEditPurchaseOrder", "PurchaseOrder", new { id = item.PurchaseOrderId})" class="btn btn-grey btn-xs">View</a></td>
                </tr>
            }
        }
    </tbody>
</table>


