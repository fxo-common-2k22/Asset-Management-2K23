@model FAPP.Areas.AM.ViewModels.AMAccountSettingsViewModel
@{
    ViewBag.Title = "Account Settings";
}
@*<style>
    #main .page-header {
        padding-bottom: 9px;
    }
</style>*@



@section topRightMenu{
    @if (ViewBag.CanCreate)
    {
        <ul class="minitiles link">
            <li class="green">
                <label for="SaveNatureAccountBtn" id="">
                    <i class="fa fa-save">
                    </i>
                </label>
            </li>
        </ul>
    }
}
@using (Ajax.BeginForm("AccountSettings", "Setup",
new AjaxOptions
{
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure",
    UpdateTargetId = "UpdateTarget"
}))
{
<div class="row">
    <div class="col-md-12">
        <div class="box box-color box-bordered">
            <div class="box-title" style="padding-top:0px;margin-top:0px">
                <h3>
                    <i class="fa fa-bar-chart-o"></i>
                    <span id="LabelTitle">Accounts</span>
                </h3>
            </div>
            <div class="box-content" style="min-height: 155px;">
                <div id="UpdateTarget">
                    @Html.Partial("_PartialAccountSettings",Model)
                </div>
            </div>
        </div>
    </div>
</div>
}
@section scripts{
    <script>

        function OnSuccess(responce) {
            DisplayMessage('', '<strong>Updated </strong>Nature Accounts has been Updated successfully')
        }
        function OnFailure(responce) {
            DisplayMessage('', '<strong>Failed</strong> Something went wrong while processing Updating account')
        }
    </script>
}