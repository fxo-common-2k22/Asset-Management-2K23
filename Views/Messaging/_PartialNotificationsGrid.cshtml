@model FAPP.ViewModel.MessagingVM
<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-condensed table-striped">
            <thead>
                <tr>
                    <th width="1%">Sr</th>
                    <th>Setting Name</th>
                    <th>SMSTemplate</th>
                    <th>EmailTemplate</th>
                    <th>Module</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int count = 1; }
                @for (int i = 0; i < Model.NotificationSettingsList.Count(); i++)
                {
                    var item = Model.NotificationSettingsList[i];
                    @Html.HiddenFor(m => m.NotificationSettingsList[i].NotificationSettingId)
                    <tr>
                        <td><span class="label label-default current-theme">@(count++)</span></td>
                        <td>
                            @Html.EditorFor(model => model.NotificationSettingsList[i].SendMobileNotification, new { htmlAttributes = new { @data_index = i, @class = "notificationCheckBoxes save", @type = "checkbox" } })
                            @Html.DisplayFor(m => item.SettingName)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.NotificationSettingsList[i].SendMessage, new { htmlAttributes = new { @data_index = i, @class = "smsCheckBoxes save", @type = "checkbox" } })
                            @Html.DropDownListFor(m => m.NotificationSettingsList[i].SMSTemplateId, new SelectList(Model.SMSTemplateDD, "Value", "Text", item.SMSTemplateId), "--Select SMS Template--", new { @data_index = i, @class = "save form-control" })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.NotificationSettingsList[i].SendEmail, new { htmlAttributes = new { @data_index = i, @class = "emailCheckBoxes save", @type = "checkbox" } })
                            @Html.DropDownListFor(m => m.NotificationSettingsList[i].EmailTemplateId, new SelectList(Model.EmailTemplateDD, "Value", "Text", item.EmailTemplateId), "--Select Email Template--", new { @data_index = i, @class = "save form-control" })
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Module.ModuleName)
                            <p class="" style="margin-bottom:0px; display: block" id="rfid_@i"></p>
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        <td>
                            <a class="btn btn-darkblue btn-xs" data-ajax="true" data-ajax-failure="OnFailure" data-ajax-method="GET" data-ajax-success="onEditSuccess" href="/Messaging/AddEditNotificatinAdminUsers/@item.NotificationSettingId">Users</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div id="addNotificationSettingAdminUserModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" id="addNotificationSettingAdminUserModalContent">
           
        </div>
    </div>
</div>
