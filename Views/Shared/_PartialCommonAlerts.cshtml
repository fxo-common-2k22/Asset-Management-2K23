@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissable h4" style="margin-bottom:0px !important">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Success!</strong> @Html.Raw(TempData["Success"])
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissable h4" style="margin-bottom:0px !important">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissable h4" style="margin-bottom:0px !important">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Warning!</strong> @TempData["Warning"]
    </div>
}