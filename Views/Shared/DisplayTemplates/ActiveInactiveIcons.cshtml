@model bool?
@{
    var o = ViewData.ModelMetadata;
    var isChecked = Model.HasValue ? Model.Value : false;
    var radioId = ViewData.TemplateInfo.GetFullHtmlFieldId("");
}

@if (Model.HasValue)
{
    if (Model.Value)
    {
        <i data-toggle="tooltip" title="Active" class="fa fa-check" style="color: #56af45;cursor:pointer"></i>
    }
    else
    {
        <i data-toggle="tooltip" title="Inactive" class="fa fa-times" style="cursor:pointer; color:red"></i>
    }
}
