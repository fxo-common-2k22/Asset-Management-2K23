@model  FAPP.Areas.AM.ViewModels.GraphsModel
<div class="box box-color box-bordered green" id="EmployeeCheckins">
    <div class="box-title">
        <h3 style="width: 100%;">
            <i class="fa fa-bars"></i>
            <span id="LabelTitle">Employee Checkins</span>
            <a href="/HRPayroll/Attendances/Record" style="color:white;" class="pull-right"><i class="fa fa-send"></i></a>
        </h3>

    </div>
    <div class="box-content" style="min-height: 155px;">
        @{
            int count = 0;
        }
        @foreach (var item in Model.v_mnl_EmployeeAttendance.Where(u => u.AttendanceDate.Date == DateTime.Now.Date).OrderByDescending(s => s.AttendanceDate.TimeOfDay).Take(15))
        {
            if (item.Arrival.HasValue)
            {
                <a class="bold" id="HyperLink1" title="@item.EmpName">
                    <span class="label label-default current-theme">@(++count)</span>
                    @(item.EmpName + " checked in at " + item.Arrival?.ToString(@"dd-MM-yyyy hh\:mm tt"))
                </a><br />
            }
        }
    </div>

</div>